{
  "manifest_version": 3,
  "name": "LinkedIn Job Tracker",
  "version": "2.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://your-api-url.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Job Tracker"
  }
}